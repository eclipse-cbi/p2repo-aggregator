<?xml version="1.0" encoding="UTF-8" standalone="no"?><templates>
<template id="fragment.host" autoinsert="true" context="org.eclipse.b3.BeeLang.kw_fragment-host" deleted="false" description="Fragment host requirement on another unit" enabled="true" name="fragment-host">fragment-host : unit { 
		name : "${cursor}";
		version : 1.0.0; 
		};</template>
<template id="fragment.host.capability" autoinsert="true" context="org.eclipse.b3.BeeLang.kw_fragment-host" deleted="false" description="Fragment host requirement on unit providing a capability" enabled="true" name="fragment-host-capability">fragment-host : capability {
	name-space : org.someorg.somecapability; 
	name : "${cursor}";
	version : 1.0.0; 
	};</template>
<template id="if.then" autoinsert="true" context="org.eclipse.b3.BeeLang.kw_if" deleted="false" description="if-then expression" enabled="true" name="if-then">if ${condition} then ${expression} endif; ${cursor} </template>
<template id="if.then.else" autoinsert="true" context="org.eclipse.b3.BeeLang.kw_if" deleted="false" description="if-then-else expression" enabled="true" name="if-then-else">if ${condition} then ${expression} else ${expression2} endif; ${cursor} </template>
<template id="switch.condition" autoinsert="true" context="org.eclipse.b3.BeeLang.AdditiveExpression" deleted="false" description="Switch on condition" enabled="true" name="switch-boolean">switch 
	case ${condition1} : ${case1Expression}
	case ${condition2} : ${case2Expression}
endswitch ; ${cursor}</template>
<template id="switch.expression" autoinsert="true" context="org.eclipse.b3.BeeLang.AdditiveExpression" deleted="false" description="Switch on expression" enabled="true" name="switch-value">switch ${expression}
	case ${case1} : ${case1Expression}
	case ${case2} : ${case2Expression}
endswitch ; ${cursor}</template>
<template id="unit.basic" autoinsert="true" context="org.eclipse.b3.BeeLang.BeeModel" deleted="false" description="Insert a unit" enabled="true" name="Unit">unit "${cursor}" version 1.0.0 {
}</template>
<template id="RequiresCapability" autoinsert="true" context="org.eclipse.b3.BeeLang.kw_requires" deleted="false" description="Adds a requirement on a unit" enabled="true" name="RequiresCapability">requires : [ capability { name-space : ${nameSpace}; name : "${unitName}"; version : ${versionRange}; }];
</template>
<template id="RequiresUnit" autoinsert="true" context="org.eclipse.b3.BeeLang.kw_requires" deleted="false" description="Adds a requirement on a unit" enabled="true" name="RequiresUnit">requires : [ unit { name : "${unitName}"; version : ${versionRange}; }];
</template>

</templates>