	d {
		input{ a/b/1.0;}
		return Paths.exclude(input,~/org\.myorg\..*/g);
	}
	// Call external builder
	e {
		input{ a/b/1.0;}
		output { bin [ a, b, c ]; }
		
		return CompileActor(input.fooBar(), output);
	}
	// Call external builder
	f {
		input{ a/b/1.0;}
		output { bin [ a, b, c ]; }
		var strategy = "normal";
		switch(input[$optimized.files])
			{
			case "O5": break;
			case "O4": {strategy = "-O4"; break;}
			default: strategy = "-O2";
			}
			
		return CompileActor(input.fooBar(), output);
	}

