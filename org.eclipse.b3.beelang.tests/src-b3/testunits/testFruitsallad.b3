	Fruit f = fruits[0];
	var x = f.pulp();
	x.schedule();
	x.join();
	var r = x.getBuildResult();
	f = fruits[1];
	with (FruitProcessing) : x = f.dice();
	x.schedule();
	x.join();
	r.merge(x.getBuildResult());
	r;
