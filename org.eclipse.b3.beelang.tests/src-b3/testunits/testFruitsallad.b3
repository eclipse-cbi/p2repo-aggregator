function testRunBuildersAndMergeResult() {
	var argv = $test.argv;
	assertEquals("Should have engine + 4 units", argv.size(), 5);
	assertTrue("Argv should be Iterable", argv instanceof Iterable);
	List<Fruit> fruits = argv.select(x | x instanceof Fruit);
	
